<!--pages/index/index.wxml-->
<view class="indexContainer">
  <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
  <button style='display: {{isShowAuthButton?"block":"none"}}' open-type="getUserInfo" bindgetuserinfo="handleGetUserInfo">获取用户登陆信息</button>
  <text class="userName">Hello {{userInfo.nickName}}</text>
  <view bindtap="openList" class="goStudy">
    <text>开户小程序之旅</text>
  </view>
  <view bindtap="openTable" class="goStudy">
    <text>可编辑表格</text>
  </view>
</view>
