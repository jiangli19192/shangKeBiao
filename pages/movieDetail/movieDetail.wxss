/* pages/movieDetail/movieDetail.wxss */
.movieDetailContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie_img {
  width: 70%;
  height: 700rpx;
  margin: 20rpx 0;
}

.movie_name {
  width: 70%;
  font-size: 40rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.movie_detail {
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}

.movieDetailCasts {
  display: flex;
  flex-direction: row;
}

.movieDetailCastName {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}

button {
  width: 70%;
  height: 80rpx;
  background: green; 
  color: #fff;
  line-height: 80rpx;
  margin-top: 50rpx;
}